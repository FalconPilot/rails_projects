<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td>
        <div class="field_label">
          Name
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field_label">
          Password
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.password_field :password_digest %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field_label">
          Confirmation
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.password_field :password_confirm %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="actions">
          <%= f.submit %>
        </div>
      </td>
    </tr>
  </table>

<% end %>
